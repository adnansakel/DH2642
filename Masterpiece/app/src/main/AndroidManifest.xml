<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adnansakel.masterpiece" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MasterpieceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateGameActivity"></activity>
        <activity android:name=".JoinGameActivity"></activity>
        <activity android:name=".LobbyActivity"></activity>
        <activity android:name=".MainGameActivity"></activity>
        <activity android:name=".InstructionsActivity"></activity>


    </application>

    <!-- Permissions for checking the internet and network state -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
