<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/privateauction_bid_view"
    android:background="@color/colorBackground"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Private Auction"
        android:id="@+id/txtPrivateAuctionTitle"
        android:textColor="@color/colorHeading"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtPrivateAuctionTitle"
        android:id="@+id/img_PrivateAuction_PaintingBeingAuctioned"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Painting Title"
        android:id="@+id/txtPaintingTitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_PrivateAuction_PaintingBeingAuctioned"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/current_highest_bid"
        android:id="@+id/txtHighestBid"
        android:textColor="@color/colorMainText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!---<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cash"
        android:textColor="@color/colorMainText"
        android:id="@+id/txtPlayerCash"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increase_bid_by_50000"
        android:id="@+id/btn_privateauction_bid"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorButtonText"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="370dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Do_not_bid"
        android:id="@+id/btn_privateauction_not_bidding"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorButtonText"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="370dp" />

</RelativeLayout>