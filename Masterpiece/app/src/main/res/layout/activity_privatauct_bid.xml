<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/privateauction_bid_view"
    android:background="@color/colorBackground"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Private Auction"
        android:id="@+id/textView9"
        android:textColor="@color/colorHeading"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:background="@drawable/downarrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/img_PrivateAuction_PaintingBeingAuctioned"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Highest Bid: "
        android:id="@+id/txtHighestBid"
        android:textColor="@color/colorMainText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="206dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cash:"
        android:textColor="@color/colorMainText"
        android:id="@+id/txtPlayerCash"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid + $50,000"
        android:id="@+id/btn_privateauction_bid"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorButtonText"
        android:layout_alignTop="@+id/btn_privateauction_not_bidding"
        android:layout_toRightOf="@+id/txtPlayerCash"
        android:layout_toEndOf="@+id/txtPlayerCash" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don&apos;t Bid"
        android:id="@+id/btn_privateauction_not_bidding"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorButtonText"
        android:layout_above="@+id/txtPlayerCash"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginBottom="72dp" />

</RelativeLayout>